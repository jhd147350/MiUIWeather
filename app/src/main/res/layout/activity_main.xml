<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="studio.jhd.miuiweather.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ff4cdad5"
        android:layout_weight="3">
        <studio.jhd.miuiweather.dynamicSkyView
            android:id="@+id/dynamicSkyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <studio.jhd.miuiweather.dynamicBgView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <studio.jhd.miuiweather.dynamicRainView
            android:id="@+id/rain"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_marginTop="60dp"
            android:layout_gravity="right"
            android:id="@+id/image01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/frame_animation" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/my_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="test" />

    </FrameLayout>


</LinearLayout>
